@{
    ViewData["Title"] = "Inicio";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-12">
            <h1 class="display-4">TheBuryCode ERP</h1>
            <p class="lead">Sistema de Gestión Integral para Electrodomésticos</p>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Accesos Rápidos -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-rocket"></i> Accesos Rápidos</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-controller="Cliente" asp-action="Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus"></i> Nuevo Cliente
                        </a>
                        <a asp-controller="Venta" asp-action="Create" class="list-group-item list-group-item-action">
                            <i class="fas fa-shopping-cart"></i> Nueva Venta
                        </a>
                        <a asp-controller="Producto" asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-box"></i> Ver Productos
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estado del Sistema -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-info-circle"></i> Estado del Sistema</h5>
                </div>
                <div class="card-body">
                    <p><strong>Módulos Implementados:</strong></p>
                    <ul>
                        <li>✅ Clientes</li>
                        <li>✅ Productos</li>
                        <li>✅ Búsqueda con Vue.js</li>
                        <li>🔨 Ventas (en desarrollo)</li>
                        <li>📋 Créditos (pendiente)</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Testing -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5><i class="fas fa-flask"></i> Testing y Desarrollo</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-controller="DatabaseTest" asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="fas fa-database"></i> Test Base de Datos
                        </a>
                        <a asp-controller="Home" asp-action="VueTest" class="list-group-item list-group-item-action">
                            <i class="fas fa-flask"></i> Test Vue.js
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>